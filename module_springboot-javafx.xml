    </dirset>
  </path>
  
  
  <target name="compile.module.springboot-javafx" depends="compile.module.springboot-javafx.production,compile.module.springboot-javafx.tests" description="Compile module springboot-javafx"/>
  
  <target name="compile.module.springboot-javafx.production" depends="register.custom.compilers" description="Compile module springboot-javafx; production classes">
    <mkdir dir="${springboot-javafx.output.dir}"/>
    <javac2 destdir="${springboot-javafx.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.springboot-javafx}/javac">
      <compilerarg line="${compiler.args.springboot-javafx}"/>
      <bootclasspath refid="springboot-javafx.module.bootclasspath"/>
      <classpath refid="springboot-javafx.module.production.classpath"/>
      <src refid="springboot-javafx.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.springboot-javafx"/>
    </javac2>
    
    <copy todir="${springboot-javafx.output.dir}">
      <fileset dir="${module.springboot-javafx.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.springboot-javafx.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.springboot-javafx.tests" depends="register.custom.compilers,compile.module.springboot-javafx.production" description="compile module springboot-javafx; test classes" unless="skip.tests">
    <mkdir dir="${springboot-javafx.testoutput.dir}"/>
    <javac2 destdir="${springboot-javafx.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.springboot-javafx}/javac">
      <compilerarg line="${compiler.args.springboot-javafx}"/>
      <bootclasspath refid="springboot-javafx.module.bootclasspath"/>
      <classpath refid="springboot-javafx.module.classpath"/>
      <src refid="springboot-javafx.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.springboot-javafx"/>
    </javac2>
    
    <copy todir="${springboot-javafx.testoutput.dir}">
      <fileset dir="${module.springboot-javafx.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
